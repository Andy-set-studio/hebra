{% extends 'layouts/base.njk' %}
{% set pageType = 'Post' %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}
<p>
  {% if date %}
    <time datetime="{{ date | w3DateFilter }}" class="dt-published">{{ date | dateFilter }}</time>
  {% endif %}
  <span role="text">â€” {{ helpers.getReadingTime(content) }} minute read</span>
</p>
{% endset %}

{% block content %}
  <main id="main-content" tabindex="-1">
    <article class="h-entry">
      {% include "partials/components/intro.njk" %}
      {{ content | safe }}
      {% if site.enableThirdPartyComments %}
        <hr />
        <aside>
          {% include "partials/global/third-party-comments.njk" %}
        </aside>
      {% endif %}
      {% if tags %}
        <footer>
          <h2>Filed under</h2>
          <ul>
            {% for item in tags %}
              <li>
                <a href="/tags/{{ item }}">{{ item }}</a>
              </li>
            {% endfor %}
          </ul>
        </footer>
      {% endif %}
    </article>
  </main>
{% endblock %}

{{ content | safe }}
